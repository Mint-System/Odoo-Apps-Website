<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view_website_minimum_order_qty" model="ir.ui.view">
        <field name="name">product.template.form.view.minimum.order.qty</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']//group[@name='group_general']" position="inside">
                <field name="min_order_qty" attrs="{'invisible':[('type','=','service')]}"/>
            </xpath>
        </field>
    </record>

</odoo>
